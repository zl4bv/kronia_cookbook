general {
        colors = true
        interval = 5
}

order += "battery 0"
order += "load"
order += "tztime utc"
order += "tztime local"

battery 0 {
        format = "BATT %percentage %remaining"
}

#tztime utc {
#        timezone = "UTC"
#        format = "%Y-%m-%d %H:%M:%S UTC"
#}

tztime local {
        timezone = "Pacific/Auckland"
        format = "%Y-%m-%d %H:%M:%S NZ"
}

load {
        format = "CPU %1min"
}
